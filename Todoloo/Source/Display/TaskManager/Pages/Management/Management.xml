<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
https://raw.githubusercontent.com/Gethe/wow-ui-source/live/Interface/FrameXML/UI_shared.xsd">

    <!--Todoloo task manager management tab page-->
    <Frame name="TodolooManagementPageTemplate" parent="TodolooTaskManagerFrame" mixin="TodolooManagementPageMixin" setAllPoints="true" virtual="true">
        <Frames>
            <Button parentKey="TutorialButton" inherits="MainHelpPlateButton">
                <Anchors>
                    <Anchor point="TOPLEFT" x="39" y="20" />
                </Anchors>
            </Button>
            
            <Frame parentKey="TaskList" inherits="TodolooTaskListTemplate">
                <Size x="274" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="5" y="-72" />
                    <Anchor point="BOTTOMLEFT" y="5" />
                </Anchors>
            </Frame>

            <!--TODO: Change to custom task info template -->
            <Frame parentKey="TaskForm" inherits="TodolooTaskFormTemplate" useParentLevel="true">
				<Size x="793" y="553"/>
				<KeyValues>
					<KeyValue key="layoutType" value="InsetFrameTemplate" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.TaskList" relativePoint="TOPRIGHT" x="2" y="0"/>
                    <Anchor point="TOPRIGHT" x="-5" />
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Background" hidden="true" />
						<Texture parentKey="MinimalBackground" hidden="true">
							<Anchors>
								<Anchor point="TOPLEFT" x="-3" y="7"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Frames>
					<Frame parentKey="NineSlice" inherits="NineSlicePanelTemplate"/>
				</Frames>
			</Frame>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnShow method="OnShow" />
        </Scripts>
    </Frame>
</Ui>