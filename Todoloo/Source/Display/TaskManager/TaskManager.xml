    <!-- Todoloo task management tab template -->
    <Button name="TodolooFrameTabTemplate" inherits="TabSystemButtonTemplate" virtual="true"/>
    
    <!--Main Todoloo task manager frame-->
    <Frame name="TodolooTaskManagerFrame" inherits="PortraitFrameTemplate, TabSystemOwnerTemplate" mixin="TodolooTaskManagerFrameMixin" parent="UIParent" hidden="true" enableMouse="true">
        <Size x="800" y="658" />
        <Frames>
            <Button parentKey="CloseButton" inherits="UIPanelCloseButtonDefaultAnchors" />
            <Frame parentKey="TabSystem" inherits="TabSystemTemplate">
				<KeyValues>
					<KeyValue key="minTabWidth" value="100" type="number"/>
					<KeyValue key="maxTabWidth" value="150" type="number"/>
					<KeyValue key="tabTemplate" value="TodolooFrameTabTemplate" type="string"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="BOTTOMLEFT" x="22" y="2"/>
				</Anchors>
			</Frame>
            <Frame parentKey="ManagementPage" inherits="TodolooManagementPageTemplate" parentArray="Pages" frameLevel="100" />
            <Frame parentKey="OverviewPage" inherits="TodolooOverviewPageTemplate" parentArray="Pages" frameLevel="100" />
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad" />
            <OnShow method="OnShow" />
            <OnHide method="OnHide" />
            <OnEvent method="OnEvent"/>
        </Scripts>
    </Frame>















